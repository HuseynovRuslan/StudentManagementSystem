@model IEnumerable<Group>

@{
    ViewData["Title"] = "Groups";
}

<div class="container py-4">
    <div class="page-header d-flex justify-content-between align-items-center">
        <h1 class="fw-bold">Group List</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill me-2"></i>Create New Group
        </a>
    </div>

    <table class="table table-striped table-hover mt-4">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Group Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var group in Model)
            {
                <tr>
                    <td>@group.Id</td>
                    <td>@group.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@group.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@group.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>